<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_w"
    tools:context="com.nursinghomecarebd.www.nursinghomecare.Activities.WelcomeScreen">

    <TextView
        android:id="@+id/text"
        android:text="Welcome"
        android:textSize="45sp"
        android:textColor="#E6E6E6"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Nursing Home Care"
        android:textSize="30sp"
        android:textColor="#fcfc"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColorHighlight="#E2CACA"
        android:layout_below="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:id="@+id/progressId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_margin="100dp"
        android:progressBackgroundTint="#f9f9f9"
        android:progressTint="#02b3b9"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

    <ImageView
        android:id="@+id/image_welcome"
        android:layout_width="30dp"
        android:layout_height="200dp"
        android:layout_above="@+id/text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/finallogo" />

</RelativeLayout>